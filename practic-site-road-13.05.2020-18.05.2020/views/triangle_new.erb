<div class="large-12 cell">
  <% form({ method: :post }, { obj: @params }) do |f| %>
    <div class="grid-container">
      <div class="grid-x grid-padding-x">
        <div class="large-12 cell">
          <%= f.input(:line_one, type: :text, placeholder: "3", label: "Первая сторона треугольника") %>
        </div>
        <div class="large-12 cell">
          <%= f.input(:line_two, type: :text, placeholder: "4", label: "Вторая сторона треугольника") %>
        </div>
        <div class="large-12 cell">
          <%= f.input(:line_three, type: :text, placeholder: "5", label: "Третья сторона треугольника") %>
        </div>
        <div class="large-12 cell">
          <input type="submit" value="Добавить" class="button">
        </div>
      </div>
    </div>
  <%end%>
</div>